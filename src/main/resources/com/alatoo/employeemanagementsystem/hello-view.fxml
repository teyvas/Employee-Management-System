<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<BorderPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.alatoo.employeemanagementsystem.EmployeeController">
    <center>
        <TableView fx:id="employeeTable">
            <columns>
                <TableColumn text="Name" fx:id="nameColumn" />
                <TableColumn text="Employee Type" fx:id="typeColumn" />
                <TableColumn text="Salary" fx:id="salaryColumn" />
            </columns>
        </TableView>
    </center>
    <top>
        <HBox spacing="10" alignment="CENTER" padding="10">
        <Label text="Name:" />
            <TextField fx:id="nameField" />
            <Label text="Type:" />
            <ChoiceBox fx:id="typeChoice">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Full-time" />
                        <String fx:value="Part-time" />
                        <String fx:value="Contractor" />
                    </FXCollections>
                </items>
            </ChoiceBox>
        </HBox>
    </top>
    <bottom>
        <VBox spacing="10" alignment="CENTER" padding="10">

        <HBox spacing="10">
                <Label text="Hourly Rate:" />
                <TextField fx:id="hourlyRateField" />
                <Label text="Hours Worked:" />
                <TextField fx:id="hoursWorkedField" />
            </HBox>
            <HBox spacing="10">
                <Button text="Add Employee" onAction="#handleAddEmployee" />
                <Button text="Remove Employee" onAction="#handleRemoveEmployee" />
                <Button text="Calculate Salaries" onAction="#handleCalculateSalaries" />
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
